{{!
    @template mod_kanban/board

    Template for the whole kanban board.

    Example context (json):
    {
        "cmid": 12,
        "id": 2,
        "hascolumns": false,
        "locked": 0,
        "addcard": true,
        "manageboard": false,
        "managecolumns": false,
        "manageassignedcards": true,
        "manageallcards": false,
        "hastemplate": false,
        "istemplate": true,
        "history": true,
        "heading": "Course board",
        "ismyuserboard": true
    }
}}
<div class="container-fluid mod_kanban_board {{#locked}}mod_kanban_board_locked_columns{{/locked}} {{#addcard}}mod_kanban_addcards{{/addcard}} {{#managecolumns}}mod_kanban_managecolumns{{/managecolumns}} {{#manageassignedcards}}mod_kanban_manageassignedcards{{/manageassignedcards}} {{#manageallcards}}mod_kanban_manageallcards{{/manageallcards}} {{#hastemplate}}mod_kanban_hastemplate{{/hastemplate}} {{#istemplate}}mod_kanban_istemplate{{/istemplate}} {{#history}}mod_kanban_history{{/history}} {{#userboardsonly}}mod_kanban_userboardsonly{{/userboardsonly}} {{#iscourseboard}}mod_kanban_iscourseboard{{/iscourseboard}} {{#manageboard}}mod_kanban_manageboard{{/manageboard}} {{#ismyuserboard}}mod_kanban_ismyuserboard{{/ismyuserboard}} " id="mod_kanban_board-{{id}}" data-id="{{id}}" data-cmid="{{cmid}}">
    <div class="row mod_kanban_board_head" data-id="{{id}}">
        <div class="col mod_kanban_heading">
            <h3>{{heading}}</h3>
            {{>mod_kanban/actionmenuboard}}
        </div>
    </div>
    <div class="row mod_kanban_scroll mod_kanban_scroll_left">
        <button class="mod_kanban_scroll_button">&lt;</button>
    </div>
    <div class="row mod_kanban_scroll mod_kanban_scroll_right">
        <button class="mod_kanban_scroll_button">&gt;</button>
    </div>
    <div class="row mod_kanban_main">
        <ul class="row mod_kanban_column_container" data-id="{{id}}" data-cmid="{{cmid}}">
            <li class="mod_kanban_addcolumn_first">
                {{>mod_kanban/addcolumn}}
            </li>
            {{#hascolumns}}
                {{#columns}}
                    {{>mod_kanban/column}}
                {{/columns}}
            {{/hascolumns}}
        </ul>
    </div>
</div>
{{#js}}
require(['core/inplace_editable']);
require(['mod_kanban/board'], function(component) {
    component.init('mod_kanban_board-{{id}}');
});
{{/js}}